{
  "name": "ciseaux",
  "description": "utility to chop an audio buffer",
  "version": "0.1.0",
  "author": "nao yonamine <mohayonao@gmail.com>",
  "bugs": {
    "url": "https://github.com/mohayonao/ciseaux/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^4.4.6",
    "browserify": "^9.0.3",
    "coveralls": "^2.11.2",
    "espower-babel": "^1.3.0",
    "isparta": "^2.1.0",
    "jshint": "^2.6.0",
    "jshint-stylish": "^1.0.1",
    "mocha": "^2.1.0",
    "power-assert": "^0.10.2",
    "sinon": "^1.12.2",
    "uglify-js": "^2.4.16",
    "web-audio-test-api": "^0.2.1"
  },
  "files": [
    "package.json",
    "README.md",
    "lib"
  ],
  "homepage": "https://github.com/mohayonao/ciseaux/",
  "keywords": [
    "webaudioapi",
    "buffer"
  ],
  "licenses": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohayonao/ciseaux.git"
  },
  "scripts": {
    "build": "npm run build-to5 && npm run build-browser && npm run build-minify",
    "build-browser": "browserify lib --standalone Ciseaux --outfile build/ciseaux.js",
    "build-minify": "uglifyjs build/ciseaux.js -m -r self -o build/ciseaux.min.js",
    "build-to5": "babel src --out-dir lib",
    "cover": "babel-node node_modules/.bin/isparta cover --report text --report html node_modules/.bin/_mocha",
    "lint": "jshint src test --reporter node_modules/jshint-stylish/stylish.js",
    "test": "mocha --require espower-babel/guess",
    "travis": "npm run lint && npm run test"
  }
}
